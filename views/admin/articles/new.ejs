<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <div class="card">
            <div class="card-header">
            <h2>Novo Artigo</h2>
            </div>
        <div class="card-body">
            <form method="post" action="/categories/save">
                <input class= "form-control" type="text" name="title" placeholder="TÃ­tulo do artigo"><br>
                <textarea class="form-control" placeholder="Escreva aqui" name="body" id="article"></textarea><br>
                <label for="">Categorias</label>
                    <select name="category" class="form-control" id="">
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }); %>
                    </select><br>
                <button class=" btn btn-success btn-sm">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

